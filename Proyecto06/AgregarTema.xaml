                        <StackPanel Orientation="Horizontal" Height="50">
                <TextBlock Text="Titulo del Tema" Width="200" Style="{StaticResource EstiloNorteTBK}" />
                <TextBox x:Name="titulo" Width="530" Style="{StaticResource EstiloNorteTBX}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="50">
                <TextBlock Text="Descripcion del Tema" Width="200" Style="{StaticResource EstiloNorteTBK}" />
                <TextBox x:Name="descripcion" Width="530" Style="{StaticResource EstiloNorteTBX}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="50">
                <TextBlock Text="Documento del Tema" Width="200" Style="{StaticResource EstiloNorteTBK}" />
                <TextBox x:Name="documento" Width="530" Style="{StaticResource EstiloNorteTBX}"/>
            </StackPanel>
                        
            <StackPanel Orientation="Horizontal" Height="50">
                <TextBlock Text="Duracion del Tema" Width="200" Style="{StaticResource EstiloNorteTBK}" />
                <TextBox x:Name="duracion" Width="530" Style="{StaticResource EstiloNorteTBX}"/>
            </StackPanel>
            <Separator Height="50"/>


        </StackPanel>
       <ItemsControl ItemsSource="{Binding Preguntas}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>

                        <StackPanel Orientation="Horizontal" Height="50">
                            <TextBlock Text="{Binding Pregunta}" Width="200" Style="{StaticResource EstiloNorteTBK}" />
                            <TextBox  Width="530" Style="{StaticResource EstiloNorteTBX}" Text="{Binding PreguntaValor}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Height="50">
                            <TextBlock Text="{Binding RCorrecta}" Width="200" Style="{StaticResource EstiloNorteTBK}" />
                            <TextBox  Text="{Binding RaCorrectaValor}" Width="530" Style="{StaticResource EstiloNorteTBX}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Height="50">
                            <TextBlock Text="{Binding RIncorrecta1}" Width="200" Style="{StaticResource EstiloNorteTBK}" />
                            <TextBox Text="{Binding RIncorrecta1Valor}" Width="530" Style="{StaticResource EstiloNorteTBX}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Height="50">
                            <TextBlock Text="{Binding RIncorrecta2}" Width="200" Style="{StaticResource EstiloNorteTBK}" />
                            <TextBox Text="{Binding RIncorrecta2Valor}" Width="530" Style="{StaticResource EstiloNorteTBX}"/>
                        </StackPanel>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

    </Grid>
